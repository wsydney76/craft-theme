<blockquote class="border-l-4 border-gray-400 py-4 px-block {{ theme.useProse ? 'max-w-prose' }}">
    <p class="italic text-2xl font-semibold">
        {{ '“'|t }}{{ block.text }}{{ '”'|t }}
    </p>
    {% if block.attribution %}
        <cite class="not-italic text-base">
            {{ block.attribution }}
        </cite>
    {% endif %}
</blockquote>
