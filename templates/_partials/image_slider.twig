{% set transform = transform ?? 'contentImage' %}
{% set id = id ?? 'image-slider' %}

{% set options = options ?? {} %}

{% set splideOptions =  {
    type: 'loop',
    autoplay: true,
    interval: 5000
}|merge(options) %}



<div id="{{ id }}" class="splide" data-splide='{{ splideOptions|json_encode }}'>
    <div class="splide__track">
        <div class="splide__list">
            {% for image in images %}
                <div class="splide__slide">
                    <img class="" src="{{ image.url(transform) }}" alt="">
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% js %}
splide = new Splide('#{{ id }}').mount();
{% endjs %}

