{% if localizedEntries ?? [] %}
    {% for entry in localizedEntries %}
        <div>
            <a class="block -mt-0.5 bg-primary text-secondary px-3 py-1 text-sm font-semibold rounded uppercase" href="{{ entry.url }}">{{ entry.site.language[:2] }}</a>
        </div>
    {% endfor %}
{% endif %}
