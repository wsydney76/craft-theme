{% extends "_layouts/main.twig" %}

{% block page %}

    <div class="py-4">
        <div class="container max-w-screen-{{ theme.pageWidth }} mx-auto bg-background">
            <div class="px-8 py-6">
                {{ navbarHtml|raw }}
            </div>

            {% include '_layouts/partials/frame_titlearea.twig' %}

            <div class="py-4">
                <div class="mt-block">
                    {{ block('content') }}
                </div>
            </div>

            <div class="mt-8 py-4 px-8 border-t border-border">
                {% include '_layouts/partials/footer.twig' %}
            </div>

        </div>

    </div>

{% endblock %}

