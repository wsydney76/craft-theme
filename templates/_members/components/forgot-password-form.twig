{% embed '_members/includes/form.twig' with {useSprig: true, action: 'users/send-password-reset-email'} %}
    {% block content %}
        {% import '_members/macros/forms.twig' as forms %}

        {{ forms.textField({
            label: 'Your Account Email Address'|t,
            name: 'loginName',
            value: user.email ??  craft.app.user.rememberedUsername ?? '',
            required: true
        }) }}

        {{ forms.button('Request Password Reset'|t, true) }}

        {% if errors is defined %}
            {% include '_members/includes/message.twig' with {
                type: 'error',
                message: errors|join(' ')
            } only %}

        {% endif %}

        {% if success is defined and success %}
            {% include '_members/includes/message.twig' with {
                type: 'notice',
                message: 'We just sent an email to your account email address. Use the link in the email to reset your password.'|t
            } only %}
        {% endif %}

    {% endblock %}
{% endembed %}
