{
  "version": "2.4.1",
  "require": {
    "clubstudioltd/craft-asset-rev": "^6.0",
    "craftcms/cms": "3.7.32",
    "craftcms/redactor": "2.10.0",
    "doublesecretagency/craft-cpcss": "2.4.0",
    "fakerphp/faker": "^1.17",
    "putyourlightson/craft-sprig": "1.11.0",
    "spacecatninja/imager-x": "v3.5.5",
    "spicyweb/craft-embedded-assets": "2.10.1",
    "vaersaagod/matrixmate": "1.3.3",
    "vaersaagod/seomate": "1.1.12",
    "verbb/smith": "^1.2",
    "verbb/super-table": "2.7.1",
    "wsydney76/elementmap": "^2.0",
    "wsydney76/work": "^1.0",
    "yiisoft/yii2-shell": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/",
      "config\\": "config/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.0"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('config/Env.php') || copy('config/Env.php.example', 'config/Env.php');\""
    ],
    "pre-update-cmd": [
      "@php craft off"
    ],
    "post-update-cmd": [
      "@php craft clear-caches/compiled-templates",
      "@php craft clear-caches/cp-resources",
      "@php craft clear-caches/data",
      "@php craft clear-caches/temp-files",
      "@php craft migrate/all --interactive=0",
      "@php craft on"
    ]
  }
}
